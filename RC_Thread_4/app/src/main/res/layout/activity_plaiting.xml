<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="550dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/plaiting_srceen"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/tv_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:visibility="invisible"
            android:text="맞았습니다."/>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/next"/>

        <TextView
            android:id="@+id/tv_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:text="8가지 만두를 골라주세요!"/>

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:textColor="@color/orange"
            android:textSize="40sp"
            android:text="30"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:id="@+id/ll_dish_1"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dish_2"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintRight_toLeftOf="@+id/ll_dish_1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dish_3"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintRight_toLeftOf="@+id/ll_dish_2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dish_4"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toRightOf="@+id/ll_dish_3"
                app:layout_constraintTop_toBottomOf="@+id/ll_dish_2"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dish_5"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toRightOf="@+id/ll_dish_4"
                app:layout_constraintTop_toBottomOf="@+id/ll_dish_1"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dish_6"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toRightOf="@+id/ll_dish_5"
                app:layout_constraintTop_toBottomOf="@+id/ll_dish_8"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dish_7"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toRightOf="@+id/ll_dish_8"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dish_8"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toRightOf="@id/ll_dish_1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_select2">
            <ImageView
                android:id="@+id/iv_mandukgook"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:src="@drawable/mandukgook"/>
            <LinearLayout
                android:id="@+id/iv_omelet"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_mandukgook"
                android:orientation="horizontal"
                android:background="@drawable/omelet"/>

            <LinearLayout
                android:id="@+id/iv_red_mandu_rect"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_omelet"
                android:orientation="horizontal"
                android:background="@drawable/red_mandu_rect"/>
            <LinearLayout
                android:id="@+id/iv_mandu"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_red_mandu_rect"
                android:orientation="horizontal"
                android:background="@drawable/mandu"/>
            <LinearLayout
                android:id="@+id/iv_white_ando_zzim"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_mandu"
                android:orientation="horizontal"
                android:background="@drawable/white_ando_zzim"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_select2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:id="@+id/iv_mandu_jeongol"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/mandu_jeongol"/>
            <LinearLayout
                android:id="@+id/iv_yoobu"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@+id/iv_mandu_jeongol"
                android:background="@drawable/yoobu"/>
            <LinearLayout
                android:id="@+id/iv_bokki"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@+id/iv_yoobu"
                android:background="@drawable/bokki"/>
            <LinearLayout
                android:id="@+id/iv_food2"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@+id/iv_bokki"
                android:background="@drawable/food2"/>
            <LinearLayout
                android:id="@+id/iv_tray_mandu"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@+id/iv_food2"
                android:background="@drawable/tray_mandu"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>